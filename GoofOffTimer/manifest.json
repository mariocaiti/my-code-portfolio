{
	"manifest_version": 2,
  	"name": "GoofOff Timer",
  	"version": "0.1",
  	"description": "Warns you about how much time you spend on time-wasting sites.",
  	"browser_action": {
  		"default_icon": "WebPelican_websafe.png",
  		"default_popup": "bg.html"
  	},
  	"permissions": [
		"tabs", 
		"http://*/*",
		"https://*/*",
		"unlimitedStorage", 
		"background"],
    "update_url": "chrome-extension://eldnhdlhgklgilbjipclpeahagmhlplb/bg.html",
    "content_scripts": [
    	{
    		"matches": ["http://*/*", "https://*/*"], 
    		"js": ["jquery-2.0.3.js", "bg.js", "timeMonitor.js", "manageSites.js"],
    		"css": ["bg.css"]
    	}
  	],
	"background":  {
		"scripts": ["bg.js", "timeMonitor.js", "manageSites.js"],
		"persistent": false
    },
    "web_accessible_resources": ["sitesList.json", "bg.js", "timeMonitor.js", "manageSites.js"]
}